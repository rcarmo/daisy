{
  "name": "daisy",
  "version": "0.1.0",
  "type": "module",
  "description": "Live disk usage sunburst visualizer using SSE",
  "author": "Rui Carmo",
  "license": "MIT",
  "bin": {
    "daisy": "./src/cli.ts"
  },
  "scripts": {
    "dev": "bun run src/cli.ts .",
    "start": "bun run src/cli.ts",
    "serve": "bun run src/cli.ts . --open",
    "build": "bun build src/cli.ts --compile --outfile dist/daisy",
    "lint": "bun x biome check src/",
    "format": "bun x biome format --write src/",
    "test": "bun test",
    "typecheck": "bun x tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/bun": "latest",
    "typescript": "^5.7.0"
  }
}
